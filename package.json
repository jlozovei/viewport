{
  "name": "viewport",
  "description": "Online tool to discover some useful information about your current viewport, browser and OS.",
  "version": "1.0.0",
  "scripts": {
    "build": "rollup -c",
    "postbuild": "cp ./CNAME ./public",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "test": "jest src",
    "test:watch": "npm run test -- --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@rollup/plugin-babel": "6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/svelte": "^4.0.5",
    "babel-jest": "^29.7.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-transform-svelte": "^2.1.1",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.6",
    "svelte": "^3.46.4",
    "svelte-jester": "^3.0.0"
  },
  "dependencies": {
    "bowser": "^2.11.0",
    "sirv-cli": "^2.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlozovei/viewport.git"
  },
  "author": "Julio Lozovei <jlozovei@gmail.com> (https://jlozovei.dev)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jlozovei/viewport/issues"
  },
  "homepage": "https://myviewport.com",
  "jest": {
    "transform": {
      "^.+\\.svelte$": "jest-transform-svelte",
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "svelte"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "bail": false,
    "verbose": true,
    "transformIgnorePatterns": [
      "node_modules"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
